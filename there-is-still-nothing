<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Parad'Aise - BDE Game</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #70c5ce; /* Couleur du ciel si l'image charge mal */
            overflow: hidden;
            font-family: 'Courier New', Courier, monospace;
            touch-action: none; /* Empêche le zoom sur mobile */
        }
        canvas {
            display: block;
            margin: 0 auto;
        }
        #scoreBox {
            position: absolute;
            top: 10%;
            width: 100%;
            text-align: center;
            font-size: 40px;
            color: white;
            font-weight: bold;
            text-shadow: 2px 2px 0 #000;
            pointer-events: none;
            z-index: 10;
        }
        #startScreen, #gameOverScreen {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 15px;
            border: 4px solid #000;
            display: none; /* Caché par défaut */
            width: 80%;
            max-width: 300px;
        }
        button {
            background: #ff69b4; /* Rose BDE */
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 20px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: bold;
            border: 2px solid black;
        }
        h1 { margin-top: 0; font-size: 24px; }
        p { font-size: 18px; }
    </style>
</head>
<body>

    <div id="scoreBox">0</div>

    <div id="startScreen" style="display: block;">
        <h1>PARAD'AISE<br>FLAPPY</h1>
        <p>Tape pour voler !</p>
        <button onclick="startGame()">JOUER</button>
    </div>

    <div id="gameOverScreen">
        <h1>PERDU !</h1>
        <p>Score: <span id="finalScore">0</span></p>
        <p>Meilleur: <span id="bestScore">0</span></p>
        <p style="font-size: 14px; color: #555;">Fais une capture d'écran si tu as battu le record !</p>
        <button onclick="resetGame()">REJOUER</button>
    </div>

    <canvas id="gameCanvas"></canvas>

    <script>
        // --- CONFIGURATION ---
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");
        
        // Charger les images (METTRE LES BONS NOMS DE FICHIERS ICI)
        const birdImg = new Image();
        birdImg.src = 'bird.png'; // Ton image de l'ange
        
        const bgImg = new Image();
        bgImg.src = 'bg.png';     // Ton image de fond
        
        const pipeImg = new Image();
        pipeImg.src = 'pipe.png'; // Ton image de palmier/obstacle

        // Variables du jeu
        let frames = 0;
        let score = 0;
        let gamePlaying = false;
        let gravity = 0.25;
        let speed = 3; // Vitesse de défilement
        let pipeGap = 180; // Espace entre les tuyaux (plus grand = plus facile)

        // Redimensionner le canvas pour mobile
        function resize() {
            canvas.height = window.innerHeight;
            canvas.width = window.innerWidth > 480 ? 480 : window.innerWidth;
        }
        window.addEventListener('resize', resize);
        resize();

        // --- OBJET OISEAU (ANGE) ---
        const bird = {
            x: 50,
            y: 150,
            w: 40, // Largeur de l'ange
            h: 40, // Hauteur de l'ange
            velocity: 0,
            jump: 5.5,
            
            draw: function() {
                // Si l'image n'est pas chargée, on dessine un carré jaune
                if (birdImg.complete && birdImg.naturalHeight !== 0) {
                    ctx.drawImage(birdImg, this.x, this.y, this.w, this.h);
                } else {
                    ctx.fillStyle = "yellow";
                    ctx.fillRect(this.x, this.y, this.w, this.h);
                }
            },
            
            update: function() {
                this.velocity += gravity;
                this.y += this.velocity;

                // Sol
                if (this.y + this.h >= canvas.height) {
                    this.y = canvas.height - this.h;
                    gameOver();
                }
                // Plafond
                if (this.y < 0) {
                    this.y = 0;
                    this.velocity = 0;
                }
            },
            
            flap: function() {
                this.velocity = -this.jump;
            }
        };

        // --- OBJET TUYAUX (PALMIERS) ---
        const pipes = {
            position: [],
            w: 60, // Largeur du tuyau
            
            draw: function() {
                for (let i = 0; i < this.position.length; i++) {
                    let p = this.position[i];
                    let topY = p.y;
                    let bottomY = p.y + this.h + pipeGap;

                    if (pipeImg.complete && pipeImg.naturalHeight !== 0) {
                        // Tuyau du haut (inversé si possible, sinon bloc vert)
                        ctx.fillStyle = "#2e8b57"; // Vert
                        ctx.fillRect(p.x, 0, this.w, topY); 
                        // Tuyau du bas (Image)
                        ctx.drawImage(pipeImg, p.x, bottomY, this.w, canvas.height - bottomY);
                    } else {
                        // Fallback rectangles verts
                        ctx.fillStyle = "#2e8b57";
                        ctx.fillRect(p.x, 0, this.w, topY);
                        ctx.fillRect(p.x, bottomY, this.w, canvas.height - bottomY);
                    }
                }
            },
            
            update: function() {
                // Ajouter un tuyau toutes les 120 frames
                if (frames % 120 === 0) {
                    this.h = (Math.random() * (canvas.height / 2)); // Hauteur aléatoire
                    this.position.push({
                        x: canvas.width,
                        y: Math.max(50, this.h) // Évite les tuyaux trop petits
                    });
                }

                for (let i = 0; i < this.position.length; i++) {
                    let p = this.position[i];
                    
                    // Déplacement
                    p.x -= speed;

                    // Collisions
                    let bottomPipeY = p.y + this.h + pipeGap; // Ajustement ici
                    
                    // Collision simple (boîte englobante)
                    if (
                        bird.x + bird.w > p.x && 
                        bird.x < p.x + this.w && 
                        (bird.y < p.y || bird.y + bird.h > bottomPipeY)
                    ) {
                        gameOver();
                    }

                    // Score
                    if (p.x + this.w < bird.x && !p.passed) {
                        score++;
                        document.getElementById("scoreBox").innerText = score;
                        p.passed = true;
                    }

                    // Supprimer si hors écran
                    if (p.x + this.w <= 0) {
                        this.position.shift();
                        i--; // Corriger l'index après suppression
                    }
                }
            },
            
            reset: function() {
                this.position = [];
            }
        };

        // --- BOUCLE DE JEU ---
        function draw() {
            // Fond
            if (bgImg.complete && bgImg.naturalHeight !== 0) {
                ctx.drawImage(bgImg, 0, 0, canvas.width, canvas.height);
            } else {
                ctx.fillStyle = "#70c5ce";
                ctx.fillRect(0, 0, canvas.width, canvas.height);
            }

            bird.draw();
            pipes.draw();
        }

        function update() {
            bird.update();
            pipes.update();
        }

        function loop() {
            if (!gamePlaying) return;
            update();
            draw();
            frames++;
            requestAnimationFrame(loop);
        }

        // --- CONTRÔLES ---
        function startGame() {
            document.getElementById("startScreen").style.display = "none";
            document.getElementById("gameOverScreen").style.display = "none";
            gamePlaying = true;
            loop();
        }

        function resetGame() {
            bird.y = 150;
            bird.velocity = 0;
            pipes.reset();
            score = 0;
            frames = 0;
            document.getElementById("scoreBox").innerText = "0";
            startGame();
        }

        function gameOver() {
            gamePlaying = false;
            
            // Gestion High Score
            let best = localStorage.getItem('bde_flappy_best') || 0;
            if (score > best) {
                best = score;
                localStorage.setItem('bde_flappy_best', best);
            }

            document.getElementById("finalScore").innerText = score;
            document.getElementById("bestScore").innerText = best;
            document.getElementById("gameOverScreen").style.display = "block";
        }

        // Gestionnaire de clic / touche
        window.addEventListener("click", function() {
            if(gamePlaying) bird.flap();
        });
        window.addEventListener("touchstart", function(e) {
            e.preventDefault(); // Empêche le scroll
            if(gamePlaying) bird.flap();
        }, {passive: false});

        // Initial draw
        resize();
        draw();

    </script>
</body>
</html>
